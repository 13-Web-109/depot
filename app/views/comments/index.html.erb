<h1><%= t('.Listing comments') %></h1>

<table>
  <tr>
    <th><%= t('.Score') %></th>
    <th><%= t('.Title') %></th>
    <th><%= t('.Review') %></th>
    <th><%= t('.Product') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.score %></td>
    <td><%= comment.title %></td>
    <td><%= comment.review %></td>
    <td><%= comment.product_id %></td>
    <td><%= link_to t('.Show'), comment %></td>
    <td><%= link_to t('.Edit'), edit_comment_path(comment) %></td>
    <td><%= link_to t('.Destroy'), comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

