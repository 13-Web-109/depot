<% if session[:user_id]  and session[:user_type] == 0 %>
  <h1>Listing users</h1>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <table class="well-table">
    <tr>
      <th>Name</th>
      <th>User Type</th>
      <th>Operation</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <% if user.user_type == 0%>
        <td>admin</td>
      <% elsif%>
        <td>user</td>
      <% end %>
      <td><%= link_to 'Show', user %> / 
        <%= link_to 'Edit', edit_user_path(user) %> / 
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= button_to 'New Admin', new_user_path %>
<% elsif session[:user_id] and session[:user_type] == 1 %>
  <h1>User Profile</h1>
  <table>
    <tr>
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
  </table>
<% end %>


