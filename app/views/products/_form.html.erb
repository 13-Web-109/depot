<%= form_for(@product, :multipart => true) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, row: 10 %>
  </div>
  <div class="field">
    <%= f.label "image_url", "product picture" %><br />
    <%= f.file_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :category_name %><br />
      <select name="categories" id="categories">
        <% @categories.each do |category|%>
        <option value="<%= category.id%>"><%= category.name%></option>
        <% end %>
      </select>
  </div>

  <div class="field">
    <%= f.label :subcategory_name %><br />
    <select name="subcategories" id="subcategories">
      <% unless @categories.empty? %>
        <% @categories[0].subcategories.each do |subcategory|%>
        <option value="<%= subcategory.id%>"><%= subcategory.name%></option>
        <% end %> 
      <%end%>
    </select>
   
  </div>  

  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>