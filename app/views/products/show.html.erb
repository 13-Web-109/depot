<h2><%= t('.Comment') %></h2>
<div id="comments">
  <% @comments.each do |comment| %>
  <div class="comment">
    <table class="comment_lists">
    <tr>
      <td>Score:</td>
      <td>
        <% comment.score.times do %>
        *
        <% end %>
      </td>
    </tr>

    <tr>
      <td>Title:</td>
      <td><%= comment.title %></td>
    </tr>

    <tr>
      <td>Review:</b>
      <td><%= comment.review %></td>
    </tr>
    </table>
    <hr/>
  </div>
  <% end %>
</div>
<%= form_for @comment, remote: true do |f| %>
  <div class="field">
    <%= f.label t('.Title')%>：<br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t('.Review') %>：<br />
    <%= f.text_area  :review , rows: 3,  cols: 40 %>
    <%= @comment.title %>
  </div>
  <div class="field">
    <%= f.label t('.Score') %>：<br />
    <%= f.select :score,[1,2,3,4,5], {:selected => "3"} %>
  </div>

  <div class="actions">
    <input type="hidden" name= "comment[product_id]" value=<%= " #{ @product.id}" %>/>
    <%=submit_tag t('.Submit') %>
  </div>

<%end%>




