<% if params[:search] %>
  <div class="state">
    key: <%= params[:search]%>  total <%= @tatol %> items
  </div>
  <% @products.each do |product| %>
    <div class="entry">
      <%= link_to image_tag("/upload/#{product.image_url}"), product %>
      <h3><%= link_to product.title, product %></h3>
      <p><%= sanitize(product.description) %></p>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to t('.add_html'), line_items_path(product_id: product), remote:true %>
      </div>
    </div>
  <%end%>
  <p><%= will_paginate @products %></p>

<% elsif%>

  <ul>
    <% @products.each do |product|%>
    <li class="product">
      <div class="img">
        <%= link_to image_tag("/upload/#{product.image_url}"), product %>
      </div>
      <div class="title">
        <%= link_to product.title, product %>
      </div>
      <div class="price">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to t('.add_html'), line_items_path(product_id: product), remote:true %>
      </div>
    </li>
    <% end %>
  </ul>
<%end%>
